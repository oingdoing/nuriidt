extends ../__template/template-sub.pug

block variables
	- var seoTitle = '사업분야';
	- var pageTitle = 'COMPANY';

block content
	.app-content
		// 지능형 데이터
		article.app-article.article-data-visual.theme-dark
			.app-article__content
				h3.app-article__tit 지능형 데이터
				.app-article__item.img-type
					p.app-article__desc 한국학 &sol; 역사학 분야 DB구축 전문 관리인력 및 전문 솔루션을 보유하고있으며, 지능형 데이터 구축을 전문적으로 수행합니다.
					.detail-info.flex-box 
						figure.flex-box__item
							img(src="../static/images/page/business-visual__item.png", alt="")
						dl.flex-box__item
							dt 아날로그 및 비정형 자료의 데이터화
							dd 다양한 유형(텍스트, 이미지 등)과 포맷(DB, XML, PDF 등)으로의 디지털화
							dt AI 기반 고문헌 활용 서비스
							dd 고문헌 한자 관련 시스템 구현을 위한 지속적인 연구 개발
							dt 데이터 가공과 융합을 통한 정보화
							dd 관련 데이터 간 연계를 통한 활용성 강화
							dt 데이터 활용과 공유 및 개방을 위한 기획
							dd 공공저작물 개방 지원 및 저작권 권리처리
				.app-article-item.list-type
					p.app-article__desc 고순도 데이터 구축을 위한 맞춤 솔루션을 개발하여 공정효율을 높이고 있습니다.
					.about-solution
						dl 
							dt NAH
							dd NuriIDT AI Hanja
								br
								| Big data Solution
						dl 
							dt NIT'S30
							dd NuriIDT
								br
								| Intelligent Tools
						dl 
							dt NPM
							dd NuriIDT
								br
								| Punction Maker
						dl 
							dt NCM
							dd NuriIDT
								br
								| Corpus Maker
						dl 
							dt NNT
							dd NuriIDT
								br
								| Newspaper Tools
		// AI 고문헌
		article.app-article.article-ai-service
			.app-article__content
				h3.app-article__tit AI 기반 고문헌 활용 서비스
				.app-article__item
					p.app-article__desc 인공지능 기술로 고문헌 한자 OCR서비스, 자동표점과 자동번역 시스템 구현을 위한 지속적인 연구 개발을 진행하고 있습니다.
					ul.item-list(data-col="3")
						li.item-list__item
							i.icon-pc-ocr-bk
							strong.item-list__item-tit 고문헌 한자 OCR
							P.item-list__item-desc 한문 고문헌 이미지를 자동 문자인식을 통해 한문 텍스트를 제공합니다.
						li.item-list__item 
							i.icon-pc-chinese
							strong.item-list__item-tit AI 문장분절
							P.item-list__item-desc 고문헌 한문 텍스트를 자동 문장분절을 통해 한문 표점텍스트를 출력합니다.
						li.item-list__item 
							i.icon-pc-ai-service-bk
							strong.item-list__item-tit AI 번역
							p.item-list__item-desc 한문 표점텍스트를 입력하면 자동 번역하여 한글 번역문을 제공합니다.
		// 공공저작물
		article.app-article.article-public-publish.theme-dark
			.app-article__content
				h3.app-article__tit 공공저작물 개방 지원
				.app-article__item
					.grid-box
						figure.grid-box__item.figure-radius
							img(src="../static/images/page/business-public__publish.png", alt="")
						figcaption.grid-box__item
							p 국가나 지방자치단체 및 공공기관이 보유·관리하고 있는 공공저작물의 개방과 관련해 적합한 공공누리 유형을 선정하여 제안합니다.
							p 복잡하게 얽혀있는 저작권으로 인해 개방에 어려움이 있는 공공저작물의 경우, 법률전문가(저작권 전문 변호사)의 저작권 권리 처리를 거쳐 개방이 가능하도록 지원합니다.
		article.app-article.article-core-desc
			.app-article__content
				p 고품질 데이터는 일반적인 웹·모바일 서비스는 물론
					br
					| 빅데이터, 머신러닝, 인공지능 등 미래기술의 굳건한 기반이 됩니다.
					br
					| 데이터의 모든 것을 누리IDT와 상의하십시오.