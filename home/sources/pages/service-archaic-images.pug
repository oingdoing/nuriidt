extends ../__template/template.pug

block variables
	- var seoTitle = '고문헌 한자 이미지 검색';
	- var pgVal = 'sub';
	- var pageTitle = 'SERVICE';

block content
	.app-content

		article.app-article.article-sub-visual
			.app-article__content
				.app-article__item 
					figure 
						img(src="../static/images/page/service-archaic-images.png", alt="")
				.app-article__tit
					h2.app-pg-tit 고문헌 한자 이미지 검색
					p.app-pg-desc 인공지능 OCR을 이용하여 디지털 텍스트가 없어도 이미지DB의 한자를 검색할 수 있는 서비스입니다.
					a(href="https://ocr.nuriidt.co.kr/isearch/", target="_blank", role="button").app-button.line-button 
						span.button-content 바로가기
		
		article.app-article
			.app-article__content
				h3.app-article__tit.type-h2 적용 사례
				.app-article__desc.type-main
					p.align-left 한자(고문헌) 원문 이미지를 다량 보유한 기관에 적용되는 서비스로서, OCR기술을 이용하여 원문 텍스트 정보 추출 후 글자 정보 및 글자의 위치값을 포함한 DB를 생성합니다. 
						br
						| 생성된 DB를 검색하여 해당 검색어가 있는 원문 이미지를 목록으로 제공하고, 텍스트 결과를 제공합니다.
				ol.step-grid.gap80
					li.step-grid__item 
						a(href="https://ocr.nuriidt.co.kr/isearch/", target="_blank").item-link
							span.item-label text → image
							dl.item-box
								dt 
									figure 
										img(src="../static/images/page/service-archaic-images__case1.png", alt="")
									strong 원문 이미지 
								dd 고서 원문 이미지 1면 업로드
					li.step-grid__item 
						a(href="https://ocr.ugyo.net/isearch/", target="_blank").item-link
							span.item-label text → image
							dl.item-box
								dt 
									figure 
										img(src="../static/images/page/service-archaic-images__case2.png", alt="")
									strong 문자 인식
								dd 한자 자동인식
								
		article.app-article.article-inquiry
			.app-article__content
				h3.app-article__tit.type-h4 궁금하신가요?
				.app-article__item
					p.app-article__desc 문의하기를 통해 연락주시면
						br
						| 신속하고 성실하게 답변드리겠습니다.
					a.app-button.solid-button(href="contact.html", role="button") 문의하기
					