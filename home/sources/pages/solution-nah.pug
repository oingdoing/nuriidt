extends ../__template/template.pug

block variables
	- var seoTitle = 'NAH';
	- var pgVal = 'sub';
	- var pageTitle = 'SOLUTION';

block content
	.app-content

		article.app-article.article-sub-visual
			.app-article__content
				.app-article__item 
					figure 
						img(src="../static/images/page/solution-nah.png", alt="")
				.app-article__tit
					h2.app-pg-tit NAH
						strong.sub-tit NuriIDT AI Hanja Big data Solution
					p.app-pg-desc NAH는 한자 고문헌의 스캔 이미지에서 문자를 인공지능 기반으로 자동 인식·입력하여 고문헌을 디지털화하는 대용량 한자 입력 솔루션입니다.
						br
						br
						| 저작권등록 제C-2022-027428호
		// 입력과정
		article.app-article
			.app-article__content
				h3.app-article__tit.type-h2 입력 과정
				.app-article__desc.type-main
					p.align-left 
				ol.step-grid
					li.step-grid__item 
						span.item-label Step 1
						dl.item-box
							dt 
								span.icon-box
									icon.icon-pc-ocr
								strong OCR 입력
							dd 자동 세그먼트 및 자동 입력
					li.step-grid__item 
						span.item-label Step 2
						dl.item-box
							dt 
								span.icon-box
									icon.icon-pc-proofread
								strong 교정
							dd 자형별 이미지 조회·수정
					li.step-grid__item 
						span.item-label Step 3
						dl.item-box
							dt 
								span.icon-box
									icon.icon-pc-copyediting
								strong 검수
							dd 원문 대조 확인 및 일괄 검색
					li.step-grid__item 
						span.item-label Step 2
						dl.item-box
							dt 
								span.icon-box
									icon.icon-pc-release
								strong 릴리즈
							dd 작업 결과물 생성
		// 주요기능
		article.app-article.article-service.theme-dark__bg
			.app-article__content
				h3.app-article__tit.type-h2 주요기능
				.app-article__item
					ul.item-list(data-col="4")
						li.item-list__item
							i.icon-pc-automation
							strong.item-list__item-tit 입력 자동화
							P.item-list__item-desc 대상 이미지의 바운딩박스 및 한자를 인공지능 OCR을 활용하여 자동으로 문자를 생성합니다.
						li.item-list__item 
							i.icon-pc-nas
							strong.item-list__item-tit 다중 프로젝트 관리
							P.item-list__item-desc 하나의 서버에서 동시에 여러 프로젝트를 진행할 수 있습니다.
						li.item-list__item 
							i.icon-pc-user-gr
							strong.item-list__item-tit 사용자 관리
							p.item-list__item-desc 프로젝트별 사용자·관리자를 관리합니다.
						li.item-list__item 
							i.icon-pc-process
							strong.item-list__item-tit 공정 관리
							p.item-list__item-desc 프로젝트 별로 사용자에게 공정을 배분하고 진행 상황을 실시간으로 관리합니다.
		// 적용사례
		article.app-article
			.app-article__content
				h3.app-article__tit.type-h2 적용 사례
				.app-article__desc.type-main
					p.align-left 한자(고문헌) 자료 소장 기관 대상의 디지털 텍스트 구축 사업과 연구 사업에 활용될 인공지능 학습(딥러닝)에 필요한 데이터를 제공합니다.
				ol.step-grid.gap80
					li.step-grid__item 
						dl.item-box
							dt 
								figure 
									img(src="../static/images/page/solution-nah__case1.jpg", alt="")
								strong 한국지능정보사회진흥원(NIA)
							dd 인공지능학습용데이터 구축
								span (2020 ~ 2022년)
					li.step-grid__item 
						dl.item-box
							dt 
								figure 
									img(src="../static/images/page/solution-nah__case2.jpg", alt="")
								strong 한국전자통신연구원(ETRI)
							dd 인공지능학습용데이터 구축
								span (2021 ~ 2022년)
								
		article.app-article.article-inquiry
			.app-article__content
				h3.app-article__tit.type-h4 궁금하신가요?
				.app-article__item
					p.app-article__desc 문의하기를 통해 연락주시면
						br
						| 신속하고 성실하게 답변드리겠습니다.
					a.app-button.solid-button(href="contact.html", role="button") 문의하기
					