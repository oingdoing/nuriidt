
extends ../__template/template.pug

block variables
	- var seoTitle = 'NCM';
	- var pgVal = 'sub';
	- var pageTitle = 'SOLUTION';

block content
	.app-content

		article.app-article.article-sub-visual
			.app-article__content.column-reverse
				.app-article__item 
					figure 
						img(src="../static/images/page/solution-ncm.png", alt="")
				.app-article__tit
					h2.app-pg-tit NCM
						strong.sub-tit NuriIDT Corpus Maker
					p.app-pg-desc 인공지능 기반 고문헌 한문 자동번역 모델의 기계학습용 코퍼스(원문/번역문 말뭉치) 구축 솔루션입니다.
						br
						br
						| 저작권등록 제C-2018-009319호
		// 주요 기능
		article.app-article
			.app-article__content
				h3.app-article__tit 주요 기능
				.app-article__desc.type-main
					p.align-left 
				ol.step-grid(data-column="auto")
					li.step-grid__item 
						dl.item-box
							dt 
								span.icon-box
									icon.icon-pc-corpus
								strong 자동표점
							dd 표점이 없는 원문 텍스트에
								br
								| 자동표점
					li.step-grid__item 
						dl.item-box
							dt 
								span.icon-box
									icon.icon-pc-make-structure
								strong 표점 수정
							dd 자동표점 교정 및 수정
					li.step-grid__item 
						dl.item-box
							dt 
								span.icon-box
									icon.icon-pc-automark-edit
								strong 작업내역 관리
							dd 통계 및 메모 기능
					li.step-grid__item 
						dl.item-box
							dt 
								span.icon-box
									icon.icon-pc-checkup
								strong 사전 관리
							dd 원전 낱말 사전, 사용자 사전,
								br
								| 규칙사전 등 사전 생성/수정 관리
					li.step-grid__item 
						dl.item-box
							dt 
								span.icon-box
									icon.icon-pc-process-bk
								strong 공정 관리
							dd 작업자 별 작업내용
								br
								| 상세조회
					li.step-grid__item 
						dl.item-box
							dt 
								span.icon-box
									icon.icon-pc-user
								strong 사용자 관리
							dd 사용자 조회, 등록, 삭제,
								br
								| 권한설정, 그룹설정 관리
	
		// 적용사례
		article.app-article.theme-dark__bg
			.app-article__content
				h3.app-article__tit 적용 사례
				.app-article__desc
					p.align-left 고문헌 한문 원문과 번역문을 보유한 기관에 적용되는 솔루션으로, 한문 원문과 번역문을 1:1 문장으로 편집하는 과정을 통해 자동번역을 위한 학습 데이터를 구축합니다.
				ol.step-grid.gap80(data-column="1")
					li.step-grid__item 
						dl.item-box
							dt 
								figure 
									img(src="../static/images/page/solution-nit30__case1.jpg", alt="")
								strong 한국고전번역원
								dd 고문헌 한자 자동번역 확산 서비스 구축 사업
									span (2017~2019년)

		article.app-article.article-inquiry
			.app-article__content
				h3.app-article__tit.type-h4 궁금하신가요?
				.app-article__item
					p.app-article__desc 문의하기를 통해 연락주시면
						br
						| 신속하고 성실하게 답변드리겠습니다.
					a.app-button.solid-button(href="contact.html", role="button") 문의하기
					